#!/bin/sh

prefix=@prefix@
exec_prefix=@exec_prefix@
PATH=@sbindir@:$PATH
export PATH

PROTO=sockets
DBDIR=/tmp/$USER
CHFSD=chfsd
LOG_DIR=$HOME

program=$(basename $0)

err() {
	[ "X$*" = X ] || echo >&2 $*
	exit 1
}

usage() {
	[ "X$*" = X ] || echo >&2 $*
	echo -e >&2 "usage: $program [-c db_dir] [-p proto] [-L log_dir]"
	echo -e >&2 "\t\t-h hostfile start | stop | status | kill"
	exit 1
}

while [ $# -gt 0 ]; do
	case $1 in
	    start|stop|status|kill) mode=$1 ;;
	    -h) shift; HOSTFILE=$1 ;;
	    -c) shift; DBDIR=$1 ;;
	    -p) shift; PROTO=$1 ;;
	    -L) shift; LOG_DIR=$1 ;;
	    -*) echo "unknown option: $1"
		usage ;;
	    *) usage ;;
	esac
	shift
done

[ "X$mode" = X ] && usage
[ "X$HOSTFILE" = X ] && usage Hostfile should be specified
[ ! -f $HOSTFILE ] && usage $HOSTFILE: no such file

PKILL_FLAG=
[ "$mode" = kill ] && PKILL_FLAG=-9

SERVER_INFO_FILE=/tmp/server-info-file-$USER
case $mode in
start)
MYHOSTNAMES="$(hostname) $(hostname -A) $(hostname -I)"
$CHFSD -c $DBDIR -p $PROTO -l $LOG_DIR/$(hostname -f) -S $SERVER_INFO_FILE
timeout=10
while [ ! -s $SERVER_INFO_FILE -a $timeout -gt 0 ]; do sleep 1; timeout=$((timeout - 1)); done
[ $timeout -eq 0 ] && err $CHFSD: timeout

SERVER=`cat $SERVER_INFO_FILE`
[ X"$SERVER" = X ] && err $CHFSD: no server info
echo "CHFS_SERVER=\"$SERVER\"; export CHFS_SERVER"
;;
stop|kill)
pkill $PKILL_FLAG $CHFSD
rm -f $SERVER_INFO_FILE
;;
status)
[ -s $SERVER_INFO_FILE ] && chlist `cat $SERVER_INFO_FILE` || echo >&2 no server info file
;;
esac

MAX_JOBS=8
p=0
for host in `sed -e 's/#.*//' -e '/^[ 	]*$/d' $HOSTFILE | awk '{ print $1 }'`
do
	echo $MYHOSTNAMES | grep $host > /dev/null && continue
	case $mode in
	start)
	ssh $host LD_LIBRARY_PATH=\"$LD_LIBRARY_PATH\" PATH=\"$PATH\" $CHFSD -c $DBDIR -p $PROTO -l $LOG_DIR/$host \"$SERVER\" &
	;;
	stop|kill)
	ssh $host pkill $PKILL_FLAG $CHFSD &
	;;
	status)
	echo $host
	ssh $host "ps -ef | grep $CHFSD | egrep -v grep"
	;;
	esac
	p=$((p + 1))
	if [ $p -ge $MAX_JOBS ]; then
		p=0
		wait
	fi
done
wait

exit 0
