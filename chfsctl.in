#!/bin/sh

prefix=@prefix@
exec_prefix=@exec_prefix@
PATH=@sbindir@:$PATH
export PATH

PROTO=sockets
DBDIR=/tmp/$USER
CHFSD=chfsd
LOG_DIR=$HOME

program=$0

err() {
	[ "X$*" = X ] || echo >&2 $*
	exit 1
}

usage() {
	[ "X$*" = X ] || echo >&2 $*
	echo >&2 "usage: $program [-c db_dir] [-p proto] [-L log_dir] -h hostfile start | stop | status"
	exit 1
}

while [ $# -gt 0 ]; do
	case $1 in
	    start|stop|status) mode=$1 ;;
	    -h) shift; HOSTFILE=$1 ;;
	    -c) shift; DBDIR=$1 ;;
	    -p) shift; PROTO=$1 ;;
	    -L) shift; LOG_DIR=$1 ;;
	    -*) echo "unknown option: $1"
		usage ;;
	    *) usage ;;
	esac
	shift
done

[ "X$mode" = X ] && usage
[ "X$HOSTFILE" = X ] && usage Hostfile should be specified
[ ! -f $HOSTFILE ] && usage $HOSTFILE: no such file

case $mode in
start)
SERVER_INFO_FILE=/tmp/server-info-file-$$
MYHOSTNAMES="$(hostname) $(hostname -A) $(hostname -I)"
$CHFSD -c $DBDIR -p $PROTO -l $LOG_DIR/`hostname` -S $SERVER_INFO_FILE
timeout=10
while [ ! -s $SERVER_INFO_FILE -a $timeout -gt 0 ]; do sleep 1; timeout=$((timeout - 1)); done
[ $timeout -eq 0 ] && err $CHFSD: timeout

SERVER=`cat $SERVER_INFO_FILE`
rm $SERVER_INFO_FILE
[ X"$SERVER" = X ] && err $CHFSD: no server info
echo "CHFS_SERVER=\"$SERVER\"; export CHFS_SERVER"
;;
esac

for host in `sed -e 's/#.*//' -e '/^[ 	]*$/d' $HOSTFILE | awk '{ print $1 }'`
do
	case $mode in
	start)
	echo $MYHOSTNAMES | grep $host > /dev/null && continue
	ssh $host LD_LIBRARY_PATH=\"$LD_LIBRARY_PATH\" PATH=\"$PATH\" $CHFSD -c $DBDIR -p $PROTO -l $LOG_DIR/$host \"$SERVER\"
	;;
	stop)
	ssh $host pkill $CHFSD
	;;
	esac
done

exit 0
